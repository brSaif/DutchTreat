@model IEnumerable<Product>

@{
    ViewBag.Title = "Shop";
    Layout = "_Layout";
}

<h2>Shop</h2>
<p> Count : @Model.Count()</p>
<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-3">
            <div class="border bg-light rounded p-1">
                <img src="~/img/VanGogh.jpg" class="img-fluid" />
                <h3>@p.Category - @p.Size</h3>
                <ul class="products-props">
                    <li>Price: $@p.Price</li>
                    <li>Artist: @p.Artist</li>
                    <li>Title: @p.Title</li>
                    <li>Description: @p.ArtDescription</li>
                </ul>
                <button id="buyButton" class="btn btn-success">Buy</button>
            </div>
        </div>

    }
</div>